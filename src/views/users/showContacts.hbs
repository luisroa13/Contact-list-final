<div class="card mx-auto" style="max-width:400px; display:block;padding:20px;" >
   <div class="card-body">
       
     <a class="btn btn-primary" href="/users/contacts" role="button">Show Contacts</a>
      <a class="btn btn-primary" href="/users/addContact" role="button">Add Contact</a>
   </div>
   
</div>


</div>
 


<div class="row">
   {{#each contacts}}
      
    <div class="card mx-auto justify-content", style="width: 300px; display:inline-block;padding:20px;">
       
        <div class="card-header">
            {{fname}} {{lname}}
            <div class="card-body">
            Email:{{email}}

        </div>
        <div class="card-body">
            Number:{{number}}
        </div>
        <div class="form.group">
      <a class="btn btn-primary" href="/users/delete/{{_id}}" role="button">Delete</a>
     
      <a class="btn btn-primary" href="/users/update/{{_id}}" role="button">Update</a>

        </div>
    </div>
    </div>
    {{else}}

    <div class="card mx-auto justify-content-between  align-items-center", style="width: 300px;">
       
        <div class="card-header">
            
         <h1>No Contacts</h1>   
         <a class="btn btn-primary" href="/users/addContact" role="button">Add Contacts</a>
    </div>
    </div>
   {{/each}}
</div>

